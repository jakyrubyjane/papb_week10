<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeFragment"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/welcome"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Username"
        android:textSize="25dp"
        android:textColor="@color/ungu"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie List"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/ungu"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="150dp"
                        android:layout_height="189dp"
                        android:src="@drawable/gambar1"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Godfather"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate : 9,2/10"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="40px"/>
                </LinearLayout>


                <!-- Spasi antara gambar -->
                <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <!-- Gambar Kedua -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="150dp"
                        android:layout_height="189dp"
                        android:src="@drawable/gambar2"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fight Club"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate : 8,8/10"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="40px"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="150dp"
                        android:layout_height="189dp"
                        android:src="@drawable/gambar3"/>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Irishman"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate : 7,6/10"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="40px"/>
                </LinearLayout>


                <!-- Spasi antara gambar -->
                <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <!-- Gambar Kedua -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="150dp"
                        android:layout_height="189dp"
                        android:src="@drawable/gambar4"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulp Fiction"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate : 8,9/10"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="40px"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="150dp"
                        android:layout_height="189dp"
                        android:src="@drawable/gambar5"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Green Mile"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate : 8,6/10"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="40px"/>
                </LinearLayout>


                <!-- Spasi antara gambar -->
                <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <!-- Gambar Kedua -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="150dp"
                        android:layout_height="189dp"
                        android:src="@drawable/gambar6"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inception"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate : 8,8/10"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="40px"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>